{{#partial "content"}}


    <p>Details:</p>
    <p>Hero Name: </p>
    <p>{{ hero.name }}</p>
    <p>Age: </p>
    <p>{{ hero.age }}</p>
    <h5>Super Power:</h5>
    <p> {{ hero.superPower }}</p>
    <h5>Weakness:</h5>
    <p> {{ hero.weakness }}</p>
    <h4>Squad Allegiance: {{squad.name}}</h4>
    <a href="/">Go back</a>
    <h3>Status:
        {{#if hero.squadMember }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Belongs to a Squad
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Not Taken
        {{/if}}
    </h3>

    {{/partial}}
{{>layout.hbs}}
