{{#partial "content"}}
    <div class="animated zoomIn">
    <form action="/heroes" method="post">
        {{#if squads}}
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="age">AGE</label>
                <input type="number" min="0" name="age" id="age" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Super power</label>
                <input type="text" name="superPower" id="superPower" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Weakness</label>
                <input type="text" name="weakness" id="weakness" class="form-control">
            </div>
            <div class="form-group">
                <label for="squadId">Assign to squad</label>
                <select id="squadId" name="squadId" class="form-control">
                    {{#each squads}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <br>
                <button type="submit" class="btn btn-info">SUBMIT</button>
                <p><a href="/squads/new">Or, Add your squad</a></p>
            </div>
        {{else}}
            <h3> Add a squad first! <a href="/squads/new">Or create one.</a> </h3>
        </form>
        {{/if}}
    </div>


{{/partial}}
{{>layout.hbs}}